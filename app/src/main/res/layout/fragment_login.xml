<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zy.ypro.widget.AccountInputView
        android:id="@+id/input_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_account"
        android:drawableRight="@drawable/ic_delete"
        android:drawablePadding="10dp"
        android:hint="输入用户名"
        android:singleLine="true"
        android:textSize="20sp"
        app:drawableTint="@color/ic_account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <com.zy.ypro.widget.PasswordInputView
        android:id="@+id/input_pwd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:drawableLeft="@drawable/ic_password"
        android:drawableRight="@drawable/ic_password_eye"
        android:drawablePadding="10dp"
        android:hint="输入密码"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textSize="20sp"
        app:drawableTint="@color/ic_account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_user"
        app:layout_constraintWidth_percent="0.8" />

    <com.zy.ypro.widget.PasswordInputView
        android:id="@+id/input_pwd2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:drawableLeft="@drawable/ic_password"
        android:drawableRight="@drawable/ic_password_eye"
        android:drawablePadding="10dp"
        android:hint="确认密码"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textSize="20sp"
        android:visibility="gone"
        app:drawableTint="@color/ic_account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_pwd"
        app:layout_constraintWidth_percent="0.8" />

    <Button
        android:id="@+id/submit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_bg"
        android:enabled="false"
        android:padding="1dp"
        android:textColor="@color/text_color_white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_pwd2"
        app:layout_constraintWidth_percent="0.8"
        tools:text="登录" />
</androidx.constraintlayout.widget.ConstraintLayout>